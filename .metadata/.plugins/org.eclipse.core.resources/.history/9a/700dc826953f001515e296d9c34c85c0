var openTable = function(){
	var tableWindow = Ti.UI.createWindow({
	backgroundColor: "#fff",
	title: "Keith Fawcett"
});
tableWindow.add(table);
navWindow.openWindow(tableWindow);
};

button.addEventListener("click", openTable);

var aboutMe = {
	"title": "Questions About Keith",
	"footer": "If you want to know more just ask",
	"rows":[
		{"Qusetion": "What is your name?",
		"Answer": "Keith Fawcett"},
		{"Qusetion":"What is your chat user name, including the host?",
		"Answer": ""},
		{"Qusetion":"In which time zone do you reside?",
		"Answer": ""},
		{"Qusetion":"Why are you in the Mobile Development Program?",
		"Answer": ""},
		{"Qusetion":"How comfortable are you with Javascript?",
		"Answer": ""},
		{"Qusetion":"How comfortable are you with Titanium?",
		"Answer": ""},
		]
};

var table = Ti.UI.createTableView({
	
});

if(Ti.Platform.name === "iPhone OS"){
	table.style = Ti.UI.iPhone.TableViewStyle.GROUPED;
};


var tableSection = Ti.UI.createTableViewSection({
	headerTitle: aboutMe.title,
	footerTitle: aboutMe.footer
});

for(i=0, j=aboutMe.rows.length; i<j; i++){
	var theRows = Ti.UI.createTableViewRow({
		title: aboutMe.rows[i].Question,
		answer: aboutMe.rows[i].Answer,
		hasChild: True
	});
	tableSection.add(theRows);
};
var rows = [tableSection];
table.setData(rows);
