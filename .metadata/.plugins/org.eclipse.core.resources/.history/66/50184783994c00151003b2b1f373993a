	Top: retypePasswordLabel.top+retypePasswordLabel.height + 5,
	height: 45,
	width: "90%",
	left:"5%",
	borderWidth: .3,
	hintText: "Retype Password",
	paddingLeft: 5,
	passwordMask: true,
