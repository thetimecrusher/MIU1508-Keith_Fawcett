	font: {fontSize:20, fontFamily:"Arial"}
	
});
var lastNameField = Ti.UI.createTextField({
	Top: lastNameLabel.top+lastNameLabel.height + 5,
	height: 45,
	width: "42%",
	right:"5%",
	borderWidth: .3,
	hintText: "Doe",
