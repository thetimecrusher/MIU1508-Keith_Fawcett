	text: "Please enter your First Name",
	top: firstNameField.top+firstNameField.height,
	height: 10,
	left: "5%",
	font: {fontSize:12, fontFamily:"Arial"}
});


var lastNameLabel = Ti.UI.createLabel({
	text: "Last Name",
	top: 50,
	height: 20,
	width: "42%",
